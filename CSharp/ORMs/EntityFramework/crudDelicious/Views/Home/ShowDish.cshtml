@model Dish

<div class="text-center">
    <h1>@Model.Name</h1>
</div>

<div class="bg-light border rounded">
    <div class="p-2">
        <h5>@Model.Name by @Model.Chef</h5>
        <hr>
        <h6>@Model.Description</h6>
        <h6>Calories: @Model.Calories</h6>
        <h6>Tastiness: @Model.Tastiness</h6>
    </div>

    <div class="d-flex justify-content-around">
        <div class="m-2">
            @* <form asp-action="UpdateDish" method="post" asp-controller="Home" asp-route-DishId="@Model.DishId">
                <button class="btn btn-info">Edit</button>
                </form> *@
            <a href="/dishes/@Model.DishId/edit" class="btn btn-info">Edit</a>
        </div>
        <div class="m-2">
            <form asp-action="DestroyDish" method="post" asp-controller="Home" asp-route-DishId="@Model.DishId">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>