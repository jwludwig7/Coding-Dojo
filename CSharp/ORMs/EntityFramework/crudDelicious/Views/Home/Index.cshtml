@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDelicious</h1>
</div>

<div>
    <h5>Check out some recent dishes</h5>
    <hr>
@{
    foreach(Dish d in Model)
    {
        <h6><a href="/dishes/@d.DishId">@d.Name</a>  by @d.Chef</h6>
    }
}
</div>
