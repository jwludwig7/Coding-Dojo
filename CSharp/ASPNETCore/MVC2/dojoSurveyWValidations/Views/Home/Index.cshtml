@{
    ViewData["Title"] = "Home Page";
}
@model Survey

<div>
    <h1 class="text-center">Dojo Survey</h1>
</div>

<div class="p-2 d-flex justify-content-center ">
    <form asp-action="process" asp-controller="Home" method="post"
        class="border border-primary rounded p-2 bg-light shadow">
        <div>
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control mb-3">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Location" class="form-label"></label>
            <select asp-for="Location" class="form-control form-select mb-3">
                <option value="" disabled selected hidden>Select a Location</option>
                <option value="San Jose">San Jose</option>
                <option value="Seattle">Seattle</option>
                <option value="Chicago">Chicago</option>
                <option value="Burbank">Burbank</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Fav" class="form-label">Favorite Language</label>
            <select asp-for="Fav" class="form-control form-select mb-3">
                <option value="" disabled selected hidden>Select a Language</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
            </select>
            <span asp-validation-for="Fav" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Comment" class="form-label">Comment (optional)</label>
            <textarea asp-for="Comment" cols="30" rows="10" class="form-control mb-3"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>


        <button class="btn btn-primary p-1">Submit</button>
    </form>
</div>
