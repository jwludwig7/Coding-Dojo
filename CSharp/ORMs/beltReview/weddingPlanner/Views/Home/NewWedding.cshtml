@model PlanWedding

<div class="d-flex justify-content-between">
    <h1>Welcome @ViewBag.LoggedUser.FirstName</h1>
    <div class="d-flex justify-content-evenly">
        <a href="/dashboard" class="p-2">Home</a>
        <a href="weddings/new" class="p-2">Plan a Wedding</a>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <button class="btn btn-danger p-2">Logout</button>
        </form>
    </div>
</div>
<hr>


<div>
    <h1>Plan a Wedding</h1>
</div>

<form asp-action="CreateWedding" asp-controller="Home" method="post">
    <input asp-for="UserId" type="hidden" value="@ViewBag.LoggedUser.UserId">
    <div class="mb-2">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control">
        <span asp-validation-for="WedderOne" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control">
        <span asp-validation-for="WedderTwo" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-info">
</form>